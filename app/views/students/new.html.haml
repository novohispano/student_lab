.container
  .row.profile
    .span3.side-nav
      %h6 STUDENTS
      = render @students
      = link_to "ADD STUDENT", new_student_path, class: "btn btn-success btn-mini"
    .span8
      %h6 ADD A STUDENT
      = form_for @student do |f|
        %h5 Student Name (Required)
        = f.text_field :name
        %h5 Email (Required)
        = f.email_field :email
        %h5 Phone (10 digits only)
        = f.telephone_field :phone
        %h5 Github (URL)
        = f.url_field :github
        = f.hidden_field :user_id, value: current_user.id
        = f.submit "Add", class: "btn btn-success form"